@model ResourceViewModel
@{
    ResourceModel fichaRecurso = Model.Resource;
    CommunityModel Comunidad = Html.GetComunidad();
    string urlAplicarMejora = $"{fichaRecurso.ListActions.UrlApplyImprovement}";
    string funcionAplicarMejora = $"AplicarMejoraDocumento('{urlAplicarMejora}')";
}

<div class="modal-header">
    <p class="modal-title">
        <span class="material-icons">check_small</span>@fichaRecurso.Title - @Html.GetText("FLUJOS", "APLICARMEJORA")
    </p>
    <span class="material-icons cerrar" data-dismiss="modal" aria-label="Close">close</span>
</div>
<div class="modal-body">
    <div class="form-group">
        <label class="control-label">@Html.GetText("FLUJOS", "AVISOAPLICARMEJORA")</label>
    </div>
    <div class="form-actions">
        <button data-dismiss="modal" class="btn btn-outline-primary uppercase btnCerrarModalIniciarMejora_@fichaRecurso.Key">@Html.GetText("COMMON", "CANCELAR")</button>
        <button class="btn btn-primary uppercase btnIniciarMejora" id="btnIniciarMejora_@fichaRecurso.Key" onclick="@funcionAplicarMejora">@Html.GetText("COMMON", "ACEPTAR")</button>
    </div>
</div>