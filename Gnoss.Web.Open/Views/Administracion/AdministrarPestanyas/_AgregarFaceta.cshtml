@*@model List<FacetaModel>*@
@model List<TabModel.FacetasTabModel>
@{
    bool visible = false;
}
@if (Model.Count == 0)
{
    <p><a class="linkSeleccionarFaceta">Crear una faceta</a></p>
}

<section class="seleccionarFacetas" style="display:none" @*@Html.Raw(Model.Count == 0 ? "style=\"display:none\"" : "")*@>
    <p>Agregar faceta específica</p>
    <ol class="facetasSortable">
        @foreach (var p in Model)
        {
            //AdministrarFacetasEnPestanyasViewModel m = new AdministrarFacetasEnPestanyasViewModel();
            //m.FacetasPestanya = p;
            //m.ListadoFacetas = new List<FacetaModel>();
            //Html.PartialView("_SeleccionFaceta", m);
            <script>cont++</script>
            <li class="bloque row faceta">
                <span class="handle faceta">:::</span>
                <section class="header">
                    <span>Nueva faceta para la página</span>

                    <span class="action eliminar">@Html.GetText("COMMON", "ELIMINAR")</span>
                    <span class="action editar">@Html.GetText("COMMON", "EDITAR")</span>
                </section>
                <section class="panEdicion">
                    <input type="hidden" name="TabEliminada" value="false" />
                    <select class="selectFacetas" name="listaFacetas">


                        <option class="facetas" value="@(p.Faceta)" name="@(p.Faceta)">"@(p.Faceta)"</option>

                    </select>

                    <select class="selectObjetosConocimiento" name="ListaOC">
                        <option class="objAux" name="@(p.ObjetoConocimiento)" value="@(p.ObjetoConocimiento)">@(p.ObjetoConocimiento)</option>
                    </select>

                    <select class="selectAux" hidden>

                        <option class="objAux" name="@(p.ObjetoConocimiento)" value="@(p.ObjetoConocimiento)">@(p.ObjetoConocimiento)</option>

                    </select>
                </section>
            </li>
        }
    </ol>
    <input type="button" value="Añadir faceta" class="addFaceta" />

</section>
