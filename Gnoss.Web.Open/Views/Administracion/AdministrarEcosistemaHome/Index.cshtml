@*
Descripción
-----------------------------------------------
Vista que muestra la página principal o Home de configuración del ecosistema. Desde aquí si tiene acceso directo a todas las opciones de configuración del ecosistema

Variables
----------------------------------------------------------------
*@
@using Microsoft.AspNetCore.Http
@{
    // Permisos de páginas
    PermisosPaginasAdministracionViewModel permisosPaginas = ViewBag.PermisosPaginas;
    CommunityModel Comunidad = Html.GetComunidad();
    Layout = "~/Views/Shared/Layout/_Layout_Admin.cshtml";
}


@* Contenedor central *@
    <div class="col col-12 header-listado">
        @* Título - Header del contenido central *@
        <div class="header-contenido">
            <div class="h1-container">
                <h1>@Html.GetText("DEVTOOLS","CONFIGURACIONDELECOSISTEMA")</h1>
            </div>
        </div>
        @* Acciones disponibles - Visualización*@
        <div class="acciones-listado acciones-seccion">
            <div class="wrap">
                <div class="visualizacion dropdown dropdown-select">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <span class="material-icons">view_agenda</span>
                        <span class="texto">@Html.GetText("DEVTOOLS","VISUALIZAR")</span>
                    </a>
                    <div class="dropdown-menu basic-dropdown .dropdown-icons dropdown-menu-right">
                        <a class="item-dropdown aCompacView" data-class-resource-list="compacView">
                            <span class="material-icons">reorder</span>
                            <span class="texto">@Html.GetText("CORREO", "COMPACTADA")</span>
                        </a>
                        <a class="item-dropdown aListView activeView" data-class-resource-list="listView">
                            <span class="material-icons">view_agenda</span>
                            <span class="texto">@Html.GetText("COMBUSQUEDAAVANZADA", "LISTADO")</span>
                        </a>
                        <a class="item-dropdown aMosaicView" data-class-resource-list="mosaicView">
                            <span class="material-icons">view_comfy</span>
                            <span class="texto">@Html.GetText("COMBUSQUEDAAVANZADA", "MOSAICO")</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* Contenido central - Opciones *@
    <div class="col col-12 col-contenido">
        <div class="wrapCol">
            <div id="section-home-content" class="section-list">
                <div class="section-list-wrap">               
                    @* Administrar traducciones *@
                    <div class="section section-navigation" data-parent-section="configuracion" data-section="traducciones-configuracion">
                        <h2>@Html.GetText("COMADMINCOMUNIDAD", "ADMINISTRARTRADUCCIONES")</h2>
                        <p>
                            @Html.GetText("DEVTOOLS","SERVICIODEPERSONALIZACIONDELOSTEXTOSENMULTIIDIOMAQUESEMOSTRA")
                        </p>
                    </div>
                    
                    @* Buzón de Correo *@
                    <div class="section section-navigation" data-parent-section="configuracion" data-section="correo-configuracion">
                        <h2>@Html.GetText("DEVTOOLS","BUZONDECORREO")</h2>
                        <p>
                            @Html.GetText("DEVTOOLS","CONFIGURACIONDELBUZONDECORREODELACOMUNIDADELCUALSERAGESTIONA")
                        </p>
                    </div>

                    @* Opciones de Plataforma *@
                    <div class="section section-navigation" data-parent-section="configuracion" data-section="configuracion-plataforma">
                        <h2>@Html.GetText("DEVTOOLS","CONFIGURACIONDELAPLATAFORMA")</h2>                    
                        <p>                            
                            @Html.GetText("DEVTOOLS","CONFIGURACIONAVANZADADEUSUARIOS,SISTEMAS,REDESSOCIALES,DOMIN")
                        </p>
                    </div>

                    @* Integración de Sharepoint *@
                    <div class="section section-navigation" data-parent-section="comunidad" data-section="admin-sharepoint">
                        <h2>@Html.GetText("COMADMINCOMUNIDAD", "ADMINISTRARSHAREPOINT")</h2>
                        <p>
                            @Html.GetText("DEVTOOLS","CONFIGURACIONDELSERVICIOSHAREPOINTENLAPLATAFORMAESTAFUNCION")
                        </p>
                    </div>

                @* Administrar vistas *@
                    <div class="section-list-wrap">
                        <div class="section section-navigation" data-parent-section="apariencia" data-section="vistas">
                            <h2>@Html.GetText("COMADMINCOMUNIDAD", "ADMINISTRARVISTAS")</h2>
                            <p>
                                @Html.GetText("DEVTOOLS","CREACION,EDICIONYPERSONALIZACIONDELASVISTASDELAPLATAFORMAPAR")
                            </p>
                        </div>
                    </div>               
                </div>
            </div>
        </div>
    </div>

@* Carga de operativa *@
@section operativaScript{    
    <script type="text/javascript" src="@Html.GetBaseUrlStatic()/responsive/theme/logic/comunidad.js?v=@Html.GetVersion()"></script>
    <script type="text/javascript">
        (function ($) {
            const pParams = {
                idSectionHomeContent: "section-home-content",
                classNavigationSections: "section-navigation",
                classNameNavigationChildrenSections: "section-children",
                dataSections: {
                    comunidad: "comunidad",
                    estructura: "estructura",
                    configuracion: "configuracion",
                    grafoConocimiento: "grafo-de-conocimiento",
                    descubrimientoAnalisis: "insights",
                    apariencia: "apariencia"
                },            
            };
            // Gestión de operativa para navegación en Home DevTools
            operativaNavegacionHome.init(pParams);
        })();
    </script>
}
