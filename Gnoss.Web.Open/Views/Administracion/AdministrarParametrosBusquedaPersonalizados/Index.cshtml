                                <input type="hidden" name="TabEliminada" value="false" />
                                <p>
                                    <span class="nombreParametro">Nombre del parámetro de búsqueda:</span>
                                    <input type="hidden" name="TabType" value="@ser.NombreParametro">
                                    <input type="text" class="nombreDelParametroBusqueda" name="nombreDelParametroBusqueda" value="@ser.NombreParametro">                                    
                                </p>
                                <p>
                                    <span class="whereParametro">Where del parámetro de búsqueda:</span>
                                    <input type="hidden" name="TabType" value="@ser.WhereParametro">
                                    <textarea class="whereDelParametro" name="whereDelParametro" cols="70" rows="200">@ser.WhereParametro</textarea>
                                </p>
                                <p>
                                    <span class="orderByParametro">Order By del parámetro de búsqueda:</span>
                                    <input type="hidden" name="TabType" value="@ser.OrderByParametro">
                                    <textarea class="orderByDelParametro" name="orderByDelParametro" cols="70" rows="200">@ser.OrderByParametro</textarea>
                                </p>
                                <p>
                                    <span class="whereFaceta">Where de la faceta:</span>
                                    <input type="hidden" name="TabType" value="@ser.WhereFacetaParametro">
                                    <textarea class="whereDeFacetaParametro" name="whereDeFacetaParametro" cols="70" rows="200">@ser.WhereFacetaParametro</textarea>
                                </p>
                            </div>
                        </section>
                    </li>
                }
                <span class="vacio"></span>
            </ol>
        </form>
    </div>
    <input type="button" class="inptanyadir" value="Guardar Todo" style="display: none"/>
    <input type="button" class="guardarTodo" value="Guardar Todo"  />
