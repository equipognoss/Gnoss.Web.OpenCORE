@model ParametroBusquedaPersonalizadoModel

@*
Descripción
-----------------------------------------------
Vista que muestra en detalle la información del parámetro de búsqueda. Adicionalmente, aquí se pintará el modal que se utilizará para su edición/creación.


Variables
----------------------------------------------------------------
*@

@{
	ParametroBusquedaPersonalizadoModel parametroBusqueda = Model;
	// Cabecera para obtención de idiomas de la Comunidad
	HeaderModel cabecera = Html.GetCabecera();
	string idModalParametroBusqueda = string.IsNullOrEmpty(parametroBusqueda.NombreParametro) ? "modal-parametro_busqueda_" : "modal-parametro_busqueda_" + parametroBusqueda.NombreParametro.Replace(" ", "-").Trim();
}

<li class="component-wrap parametroBusqueda-row" id="@parametroBusqueda.NombreParametro">

	<div class="component">
		<div class="component-header-wrap">
			<div class="component-header">
				<div class="component-header-content">
					<div class="component-header-left">

						@* Nombre *@
						<div class="component-name-wrap">													
							<span class="component-name">
								@parametroBusqueda.NombreParametro
							</span>																				
						</div>

						@* Where *@
						<div class="component-where-wrap">													
							<span class="component-where">
								@parametroBusqueda.WhereParametro
							</span>																				
						</div>

						@* Orderby *@
						<div class="component-orderBy-wrap">													
							<span class="component-orderBy">
								@parametroBusqueda.OrderByParametro
							</span>																				
						</div>

						@* Fecha: *@
						<div class="component-fecha-wrap">
							<span class="component-fecha">01/10/2022</span>
						</div>
						
					</div>
					@*Sección de acciones *@
					<div class="component-header-right">
						<div class="component-actions-wrap">
							@* Botón dropdown de acciones *@
							<div class="dropdown">
								<a
									class="nav-link dropdown-toggle btn btn-outline-grey"
									data-toggle="dropdown"
									href="#"
									role="button"
									aria-haspopup="true"
									aria-expanded="false">
									<span class="material-icons">create</span>
									<span class="texto">@Html.GetText("COMMON","EDITAR")</span>
								</a>
								@* Panel dropdown con las acciones disponibles *@
								<div
									class="dropdown-menu basic-dropdown dropdown-icons dropdown-menu-right">
									@* Acción Editar *@
									<a
										class="item-dropdown btnEditParametroBusqueda"
										data-toggle="modal"					
										data-target="#@(idModalParametroBusqueda)">
										<span class="material-icons">edit</span>
										<span class="texto">@Html.GetText("COMMON","EDITAR")</span>
									</a>
																		
									@* Acción Borrar *@
									<a class="item-dropdown btnDeleteParametroBusqueda"
									   data-toggle="modal" 
									   data-target="#modal-delete-parametro-busqueda">
										<span class="material-icons">delete</span>
										<span class="texto">@Html.GetText("DEVTOOLS","BORRAR")</span>
									</a>
								</div>																												
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	@* Información detallada de la pestaña -> Modal *@
	@Html.PartialView("_modal-views/_edit-parametro-busqueda-detail-item", parametroBusqueda)
</li>
