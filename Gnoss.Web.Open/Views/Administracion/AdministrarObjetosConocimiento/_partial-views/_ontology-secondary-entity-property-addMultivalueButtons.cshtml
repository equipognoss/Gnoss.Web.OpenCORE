@model SharedSemCms

@*
Descripción
-----------------------------------------------
Vista que pinta botones de un objeto secundario cuando son propiedades "Ontologicas" desde "_ontology-secondary-entity-property-ontoData".

Variables
----------------------------------------------------------------
*@
@{

}

@{ 
    Es.Riam.Semantica.OWL.Propiedad mPropiedad = Model.semanticPropertyModel.Element.Propiedad;
    string idControl = Model.semanticPropertyModel.OntologyPropInfo.ControlID;
    string idBtnCrear = idControl.Replace("Campo_", "lbCrear_");
    string idBtnGuardar = idControl.Replace("Campo_", "lbGuardar_");
    string idControlValoresAg = idControl.Replace("Campo_", "contedor_Valores_");
    string mensajeCrear = null;
    string mensajeGuardar = null;

    if (mPropiedad.EspecifPropiedad.TextoAgregarElem != null)
    {
        mensajeCrear = mPropiedad.EspecifPropiedad.TextoAgregarElem;
    }
    else
    {
        mensajeCrear = Html.GetText("CONTROLESDOCUMENTACION", "ANYADIR");
    }


    if (mPropiedad.EspecifPropiedad.TextoBotonAceptarElemento != null)
    {
        mensajeGuardar = mPropiedad.EspecifPropiedad.TextoBotonAceptarElemento;
    }
    else
    {
        mensajeGuardar = Html.GetText("CONTROLESDOCUMENTACION", "ACEPTAR");
    }
}
@* Cambiado llamada a TxtValorRdf,TxtRegistroIDs,TxtCaracteristicasElem,TxtElemEditados *@
@*
    <input id="@idBtnCrear" class="btn btn-primary mt-2" type="button" value="@mensajeCrear" onclick="AgregarValorADataNoFuncionalProp('@mPropiedad.ElementoOntologia.TipoEntidad','@mPropiedad.Nombre','@idControlValoresAg',TxtValorRdf,TxtRegistroIDs,TxtCaracteristicasElem,TxtElemEditados);" />
    <input id="@idBtnGuardar" class="btn btn-primary mt-2" type="button" value="@mensajeGuardar" onclick="GuardarValorADataNoFuncionalProp('@mPropiedad.ElementoOntologia.TipoEntidad','@mPropiedad.Nombre','@idControlValoresAg',TxtValorRdf,TxtRegistroIDs,TxtCaracteristicasElem,TxtElemEditados);" style="display:none;" />
*@
<input id="@idBtnCrear" class="btn btn-primary mt-2" type="button" value="@mensajeCrear" onclick="AgregarValorADataNoFuncionalProp(this,'@mPropiedad.ElementoOntologia.TipoEntidad','@mPropiedad.Nombre','@idControlValoresAg','mTxtValorRdf','mTxtRegistroIDs','mTxtCaracteristicasElem','mTxtElemEditados');" />
<input id="@idBtnGuardar" class="btn btn-primary mt-2" type="button" value="@mensajeGuardar" onclick="GuardarValorADataNoFuncionalProp(this,'@mPropiedad.ElementoOntologia.TipoEntidad','@mPropiedad.Nombre','@idControlValoresAg','mTxtValorRdf','mTxtRegistroIDs','mTxtCaracteristicasElem','mTxtElemEditados');" style="display:none;" />
