@model ObjetoConocimientoModel
@*
Descripción
-----------------------------------------------
Vista de header y buscador de elementos del objeto de conocimiento secundario. Mediante una petición se cargarán los elementos del objeto de conocimiento secundario.

Variables
----------------------------------------------------------------
*@

@{
	// Id automático
	string randomId = @Guid.NewGuid().ToString().Substring(0,5);
	// Id para los tabs multiIdioma para su correcta visualización al cambiar para ver otros idiomas
	string checkboxSelectedElements = "checkSelectEditedElements_" + randomId;	
}

<div class="header-listado mb-3">
	<div class="h1-container">
		<h3 class="mb-0">@Html.GetText("DEVTOOLS","ENTIDADESDELOBJETODECONOCIMIENTO")
			<span class="numResultados numResultadosEntities"></span>
		</h3>
	</div>

	<div class="acciones d-flex align-items-center">
		@* Botón para añadir Nueva Entidad/Elemento *@
		<button class="btn btn-outline-primary btnAddSecondaryElement ml-2" disabled>@Html.GetText("DEVTOOLS","AÑADIRELEMENTO")</button>

		@* Dropdown menú*@
		<div class="dropdown">
			<a
				class="dropdown-toggle no-flecha"
				data-toggle="dropdown"
				aria-expanded="false">
				<span class="material-icons">more_vert</span>
			</a>
			<div
				class="dropdown-menu basic-dropdown dropdown-icons dropdown-menu-right"
				style="will-change: transform">
				@* Opción *@
				<a class="item-dropdown">
					<div class="custom-control custom-checkbox acciones-listado__option">
						<input type="checkbox" id="@checkboxSelectedElements" class="custom-control-input checkboxShowUnsavedItems">
						<label class="custom-control-label" for="@checkboxSelectedElements">@Html.GetText("DEVTOOLS","MOSTRARELEMENTOSSINGUARDAR")</label>
					</div>
				</a>
			</div>
		</div>
	</div>
</div>

@* Header de Elementos (Buscar + Añadir) *@
<div
	class="headerObjetosConocimiento"
	style="display: flex; align-items: center">
	<div class="col-buscador" style="width: 100%">
		<form id="formBuscadorPaginas" onsubmit="return false;">
			<div class="finderUtils" id="divCajaBusqueda">
				<div class="group finderSection">
					<input
						type="text"
						class="not-outline finderSectionText findSecundaryOntologyElements"
						autocomplete="off"
						placeholder="@Html.GetText("DEVTOOLS","BUSCARENLASECCION")"
					/>
					<input
						title="Buscar"
						type="button"
						class="findAction"
						id="inputLupa"
					/>
					<a href="javascript: void(0);" class="btn-filtrar-movil">
						<span class="material-icons">filter_list</span>
						<span class="texto">Filtrar</span>
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

@* Listado donde se cargarán los Elementos del objeto de conocimiento secundario *@
<ul class="id-added-element-list element-list no-list-style">	
	@* Elemento del OC Secundario - Se cargará vía petición (_ontology-secondary-list.cshtml) *@	
</ul>