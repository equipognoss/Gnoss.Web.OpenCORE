@model CMSAdminPropiedadComponenteViewModel

@*
Descripción
-----------------------------------------------
Vista parcial que se utiliza para mostrar información de un componente CMS en formato Select o ComboBox (Select ComboBox)

Variables
----------------------------------------------------------------
*@

@{
    string idiomaPanel = (string)ViewData["idiomaPanel"];
    string idPanel = "propiedad" + ((short)Model.Propiedad.TipoPropiedadCMS);
    string valorPropiedad = Model.Propiedad.Value;
    if (!string.IsNullOrEmpty(idiomaPanel))
    {
        idPanel += "_" + idiomaPanel;
        valorPropiedad = Html.ObtenerTextoDeIdioma(Model.Propiedad.Value, idiomaPanel, null, true);
    }

    string nombrePropiedad = Html.GetText("COMADMINCMS", "PROPIEDAD_" + Model.Propiedad.TipoPropiedadCMS);
}

@* Contenedor del elemento Html *@
<div id="contenedorPrincipal_@idPanel" class="form-group @(Model.DiferenciasPropiedadesCMS[idiomaPanel] ? "error" : "")">
    @* Label del elemento Html*@
    <label class="control-label d-block">@nombrePropiedad@(Model.Propiedad.Required ? " *" : "")</label>
    @* Elemento Html *@	
	<select id="@idPanel"
            name=""
            class="js-select2 form-control"
			tabindex="0"
            @(Model.Propiedad.Required ? " required" : "")
            aria-hidden="false" disabled>
        @foreach (string idOpcion in Model.Propiedad.Options.Keys)
            {
            bool selected = !string.IsNullOrEmpty(Model.Propiedad.Value) && Model.Propiedad.Value.Equals(idOpcion);
            <option @(selected ? "selected=\"selected\"" : "") value="@idOpcion">@Model.Propiedad.Options[idOpcion]</option>
            }
	</select>                
</div>
