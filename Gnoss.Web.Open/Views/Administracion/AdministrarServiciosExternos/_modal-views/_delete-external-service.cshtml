@*
Descripción
-----------------------------------------------
Vista modal para confirmar la eliminación de un servicio externo

Variables
----------------------------------------------------------------
*@
@{
	// Controlar la posibilidad de guardar datos
	bool allowSaveData = true;
	@* Controlar la posibilidad de guardar datos (CI/CD) *@
	if (Html.GetComunidad().IntContActivadaSinRamaEnUso || !Html.GetComunidad().UsuarioDadoAltaIntCont || Html.GetComunidad().EntornoBloqueado)
	{
		allowSaveData = false;
	}
}

@* Modal de eliminación de parámetro de búsqueda *@
<div
	id="modal-delete-external-service"
	class="modal modal-top fade modal-confirmDelete"           
	role="dialog"	
	aria-modal="true">

	<div class="modal-dialog" role="document">
		<div class="modal-content">
			@* Modal para controlar el borrado *@
			<div class="modal-header">
				@* Título del Modal *@
				<p class="modal-title">
					<span class="material-icons">delete</span>
					@Html.GetText("COMMON","ELIMINAR")
				</p>
				@* Cierre del Modal *@
				<span class="material-icons cerrar"
					  data-dismiss="modal"
					  aria-label="Close">close</span>
			</div>
			<div class="modal-body">				
				<div class="form-group">
					<label class="control-label">@Html.GetText("COMMON","CONFIRMARELIMINAR")</label>
				</div>
				@if (allowSaveData)
				{
					<div class="form-actions">
						<button data-dismiss="modal" class="btn btn-outline-primary btnNotConfirmDeleteExternalService">@Html.GetText("COMMON", "NO")</button>
						<button class="btn btn-primary btnConfirmDeleteExternalService">@Html.GetText("COMMON", "SI")</button>
					</div>	
				}				
			</div>
		</div>
	</div>
</div>