}



<ul id="id-added-descarga-text-list"
    data-value="text"
    class="js-community-descarga-text-list component-list component-translate-list no-list-style">

	@* Contenedor de las descargas de tipo Texto *@
    @if (!isInEcosistemaPlatform)
	{
        @foreach (Dictionary<string, string> textItem in textList)
        {
            @Html.PartialView("_partial-views/_translate-text-list-item", textItem)
        }
    }
    else
    {
        @foreach (Dictionary<string, string> textItem in textListEcosistema)
        {
            @Html.PartialView("_partial-views/_translate-text-list-item", textItem)
        }

    }

</ul>