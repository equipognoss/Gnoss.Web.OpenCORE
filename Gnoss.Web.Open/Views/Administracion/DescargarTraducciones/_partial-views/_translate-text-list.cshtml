@model DescargarTraduccionesViewModel

@*
Descripción
-----------------------------------------------
Vista contenedora de los items de tipo "Texto" para mostrar la posibilidad de descargarlos o realizar acciones sobre ellos

Variables
----------------------------------------------------------------
*@
@{
    bool isInEcosistemaPlatform = !string.IsNullOrEmpty(ViewBag.isInEcosistemaPlatform) ? (bool.Parse(ViewBag.isInEcosistemaPlatform)) : false;

    Dictionary<string, string>[] textListEcosistema = new Dictionary<string, string>[]
    {
        new Dictionary<string, string>()
        {
            { "name", "Personalizados para vistas" },
            { "nameForCheckbox", "DescargarTextosPersonalizados" },
        }
    };

    Dictionary<string, string>[] textList = new Dictionary<string, string>[]
    {
        new Dictionary<string, string>()
        {
            { "name", "Personalizados para vistas" },
            { "nameForCheckbox", "DescargarTextosPersonalizados" },
        },
        new Dictionary<string, string>()
        {
            { "name", "Páginas" },
            { "nameForCheckbox", "DescargarTextoProyectoPestanyaMenu" },
        },
        new Dictionary<string, string>()
        {
            { "name", "Componentes del CMS" },
            { "nameForCheckbox", "DescargarCmsPropiedadComponente" },
        },
        new Dictionary<string, string>()
        {
           { "name", "Facetas" },
           { "nameForCheckbox", "DescargarFacetaObjetoConocimientoProyecto" },
        },
        new Dictionary<string, string>()
        {
           { "name", "Categorías tesauro" },
           { "nameForCheckbox", "DescargarCategoriaTesauro" },
        },
        new Dictionary<string, string>()
        {
           { "name", "Cláusulas de registro" },
           { "nameForCheckbox", "DescargarClausulaRegistro" },
