@*
    Descripción
    -----------------------------------------------
    Div de máscaras que se utilizará para hacer "loading". Debería de estar en todas las páginas según parece. Loading con "spinner".

    Variables
    ----------------------------------------------------------------
*@
@{
    UserProfileModel Perfil = Html.GetPerfil();
    CommunityModel Comunidad = Html.GetComunidad();
}

@*
    ----------------------------------------------------------------
    -------------------- Modales --------------------
*@

@using Es.Riam.Gnoss.Web.MVC.Models;
@if (Html.GetComunidad() != null)
{
    <div id="mascaraBlanca">
        <div class="wrap popup">
            <div class="preloader-wrapper active">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div><div class="gap-patch">
                        <div class="circle"></div>
                    </div><div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

